/* pages/result/result.wxss */
@import '../../pages/canvas/canvas.wxss';
page{
  height: 100%;
}
.background {
width: 100%;
height: 100%;
position:fixed; 
background-size:100% 100%;
z-index: -1;
}
.result{
  align-items: center;
  /* padding: 40rpx; */
  color: rgba(10, 131, 70, 0.973);
  font-size: 15px;
}
.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  color: rgba(90, 137, 199, 0.973);
  font-size: 12px;
}
.scoregood {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color:#77aa22;
  font-size: 30px;
}
.scorebad {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: red;
  font-size: 30px;
}
.userinfo {
  margin-top:0px;
  background: white;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}